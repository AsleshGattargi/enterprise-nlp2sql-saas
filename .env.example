# Multi-Tenant NLP2SQL Environment Configuration

# =============================================================================
# METADATA DATABASE CONFIGURATION (MySQL - Primary metadata store)
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=nlp2sql_metadata

# =============================================================================
# ORGANIZATION-SPECIFIC DATABASE CONFIGURATIONS
# =============================================================================

# TechCorp (org-001) - SQLite
# No additional configuration needed - uses local SQLite files

# HealthPlus (org-002) - MySQL
HEALTHPLUS_DB_HOST=localhost
HEALTHPLUS_DB_PORT=3307
HEALTHPLUS_DB_USER=healthplus_user
HEALTHPLUS_DB_PASSWORD=healthplus_pass_2024

# FinanceHub (org-003) - PostgreSQL
FINANCEHUB_DB_HOST=localhost
FINANCEHUB_DB_PORT=5433
FINANCEHUB_DB_USER=financehub_user
FINANCEHUB_DB_PASSWORD=financehub_pass_2024

# RetailMax (org-004) - MongoDB
RETAILMAX_DB_HOST=localhost
RETAILMAX_DB_PORT=27018
RETAILMAX_DB_USER=retailmax_admin
RETAILMAX_DB_PASSWORD=retailmax_pass_2024

# EduLearn (org-005) - MySQL
EDULEARN_DB_HOST=localhost
EDULEARN_DB_PORT=3308
EDULEARN_DB_USER=edulearn_user
EDULEARN_DB_PASSWORD=edulearn_pass_2024

# =============================================================================
# AI/NLP CONFIGURATION
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Alternative OpenAI Configuration (if using OpenAI instead of Ollama)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
FASTAPI_DEBUG=true

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# =============================================================================
# DATABASE ADMIN TOOL CONFIGURATIONS
# =============================================================================

# phpMyAdmin (for MySQL databases)
PMA_HOST=healthplus-mysql
PMA_PORT=3306
PMA_USER=root
PMA_PASSWORD=healthplus_root_2024

# pgAdmin (for PostgreSQL)
PGADMIN_DEFAULT_EMAIL=admin@financehub.net
PGADMIN_DEFAULT_PASSWORD=financehub_admin_2024

# Mongo Express (for MongoDB)
ME_CONFIG_MONGODB_ADMINUSERNAME=retailmax_admin
ME_CONFIG_MONGODB_ADMINPASSWORD=retailmax_pass_2024
ME_CONFIG_BASICAUTH_USERNAME=retailmax_admin
ME_CONFIG_BASICAUTH_PASSWORD=retailmax_pass_2024

# =============================================================================
# SECURITY CONFIGURATIONS
# =============================================================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/nlp2sql.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATIONS
# =============================================================================
ENVIRONMENT=development
DEBUG_SQL_QUERIES=false
ENABLE_QUERY_LOGGING=true
MAX_QUERY_RESULTS=1000